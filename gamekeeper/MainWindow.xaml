<Window x:Class="gamekeeper.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:gamekeeper"
        mc:Ignorable="d"
        Title="Gamekeeper" Height="450" Width="800">
    <Grid>
        <Button Content="About" HorizontalAlignment="Left" Margin="707,0,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>
        <Button Content="Settings" HorizontalAlignment="Left" Margin="627,0,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click"/>
        <DataGrid HorizontalAlignment="Stretch" Margin="0,25,0,0" VerticalAlignment="Stretch" Grid.ColumnSpan="2" ItemsSource="{Binding Path=games}">
        </DataGrid>
        <Label Content="Filter" HorizontalAlignment="Left" Margin="461,0,0,0" VerticalAlignment="Top" RenderTransformOrigin="12.639,0.885" Height="25"/>
        <ComboBox HorizontalAlignment="Left" Margin="502,0,0,0" VerticalAlignment="Top" Width="120"/>

    </Grid>
</Window>
